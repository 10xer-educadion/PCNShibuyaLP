---
export interface Props {
  id: string;
  title: string;
}

const { title, id } = Astro.props;
---

<section
  id={id}
  class="flex scroll-mt-24 flex-col items-center gap-4 space-y-8"
>
  <div class="flex flex-col items-center gap-4">
    <slot name="eyebrow" />
    <h2
      class="text-center font-extrabold tracking-tight text-6xl"
    >
      {title}
    </h2>
    <!-- Display "Presented by 10XER.Education" only when id="intro" -->
    {id === 'about' && (
      <p class="text-sm text-gray-500 text-center -mt-2">
        Presented by 10XER.Education
      </p>
    )}
  </div>
  <p class="max-w-xl text-center font-extrabold text-2xl">
    <slot name="lead" />
  </p>
  <slot />
</section>
